<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.owner.cafetoolkit.custTab_Mod">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:hint= "Add/Subtract Values"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum"
        android:id="@+id/tabSum2"
        android:layout_alignBottom="@+id/editText8"
        android:layout_alignEnd="@+id/invmodExp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/tabAdd2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/tabDel2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/tabBack2"
        android:layout_alignTop="@+id/tabDel2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Credit"
        android:id="@+id/textView"
        android:layout_marginBottom="86dp"
        android:layout_above="@+id/invmodExp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Type in the customer that you wish to modify the value of, then proceed to enter a value of change and use signs to indicate the addition or subtraction of their credit, if you subtract one dollar from their acc, type '-1' or if they add one dollar to their tab, type '1' after you have typed in the value and the sign, hit the sum button, this will update the ammount of money that person has in their credit.
        If adding a new customer, type the customer name and a value and hit the add button.
        If deleting a customer, type the customer name and press delete."
        android:id="@+id/invmodExp"
        android:layout_above="@+id/tabAdd2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Customer First Name"
        android:ems="10"
        android:id="@+id/tabFirst"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Customer Last Name"
        android:ems="10"
        android:id="@+id/tabLast"
        android:layout_below="@+id/tabFirst"
        android:layout_alignEnd="@+id/tabFirst" />


</RelativeLayout>
